{
  "swagger": "2.0",
  "info": {
    "title": "bot.proto",
    "version": "version not set"
  },
  "tags": [
    {
      "name": "Bot"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/bot": {
      "get": {
        "summary": "List bots related to the project",
        "operationId": "list",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/botListResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "Bot"
        ]
      }
    },
    "/v1/bot/{botId}/command": {
      "post": {
        "summary": "Send bot command",
        "operationId": "send-command",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "botId",
            "description": "Bot ID",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "command",
            "description": "Command to perform",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/botCommand"
            }
          }
        ],
        "tags": [
          "Bot"
        ]
      }
    }
  },
  "definitions": {
    "botBotInfo": {
      "type": "object",
      "example": {
        "serial": "CB-616"
      },
      "properties": {
        "serial": {
          "type": "string",
          "title": "Serial number"
        }
      }
    },
    "botCommand": {
      "type": "object",
      "example": {
        "name": "mode_out_of_service"
      },
      "properties": {
        "name": {
          "$ref": "#/definitions/botCommandName",
          "title": "Command name"
        }
      }
    },
    "botCommandName": {
      "type": "string",
      "enum": [
        "unknown",
        "mode_out_of_service",
        "mode_operational",
        "stop_alarm",
        "power_off"
      ],
      "default": "unknown"
    },
    "botListResponse": {
      "type": "object",
      "example": {
        "bots": {
          "42": "\u003cBotInfo\u003e",
          "1337": "\u003cBotInfo\u003e"
        }
      },
      "properties": {
        "bots": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/botBotInfo"
          },
          "title": "ID to bot description"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
